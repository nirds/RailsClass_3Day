= form_for @calculation, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :input, :class => 'control-label'
    .controls
      = f.text_field :input, :class => 'text_field'
  .control-group
    = f.label :function, :class => 'control-label'
    .controls
      = f.text_field :function, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), calculations_path, :class => 'btn'
